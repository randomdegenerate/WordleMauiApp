<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChrimaNew.MainPage"
             >
    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25">
            <Grid x:Name="GridPageContent" WidthRequest="300" HeightRequest="360"
                    HorizontalOptions="Center" VerticalOptions="Center" 
                    BackgroundColor="AliceBlue">
            </Grid>
            
            <Entry x:Name="entry" MaxLength="5" Completed="Entry_Completed"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
